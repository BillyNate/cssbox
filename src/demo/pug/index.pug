- var config = { title: 'CSSBox' }
- var i = 0;
- var gallery = [{'i':'first','url':'//ununsplash.imgix.net/photo-1418065460487-3e41a6c84dc5'}, {'i':'second','url':'//ununsplash.imgix.net/photo-1419064642531-e575728395f2'}, {'i':'third','url':'//ununsplash.imgix.net/photo-1417436026361-a033044d901f'}, {'i':'fourth','url':'//ununsplash.imgix.net/photo-1414502622871-b90b0bec7b1f'}, {'i':'fifth','url':'//ununsplash.imgix.net/photo-1416424500327-a57ace7358b8'}, {'i':'last','url':'//ununsplash.imgix.net/photo-1417021423914-070979c8eb34'}]
- var other = [{'alt':'Inline','url':'http://billynate.github.io/cssbox/images/keep-calm-and-use-some-html.png'}, {'alt':'iframe','url':'http://billynate.github.io/cssbox/images/keep-calm-and-iframe-it.png'}]
doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title=config.title
		meta(property="og:title", content=config.title)
		meta(property="og:type", content="website")
		link(rel="stylesheet", href="//cdn.jsdelivr.net/gh/necolas/normalize.css/normalize.min.css")
		<!--[if (gte IE 6)&(lte IE 8)]>
		script(src="//cdn.jsdelivr.net/npm/jquery@1.11.2/dist/jquery.min.js")
		script(src="//cdn.jsdelivr.net/npm/selectivizr/selectivizr.js")
		<![endif]-->
		link(rel="stylesheet", href="//cdn.jsdelivr.net/gh/BillyNate/css-spinning-spinners/dist/css/load4.css")
		link(rel="stylesheet", href="css/page.css")
		link(rel="stylesheet", href="../dist/css/cssbox.css")
		link(rel="stylesheet", href="../dist/css/boxstyle6.css")
		link(rel="stylesheet", href="../dist/css/transition1.css")
		script(src="../dist/js/cssbox.js")
		script(src="js/page.js")
	body
		- for(i=0; i<gallery.length; i++)
			label.cssbox-button(for="gallery01_" + i, id="gallery01_" + i + "_label" role="button", aria-hidden="true")
				img(src=gallery[i].url+"?fit=max&w=1000&h=200&q=75", alt="")
		- for(i; i<gallery.length+other.length; i++)
			label.cssbox-button(for="gallery01_" + i, id="gallery01_" + i + "_label" role="button", aria-hidden="true")
				img(src=other[i-gallery.length].url, alt=other[i-gallery.length].alt, width="200", height="200")
		- for(i=0; i<gallery.length; i++)
			input.cssbox-select(type="radio", name="gallery01", value=i, id="gallery01_" + i, role="button", aria-controls="gallery01_" + i + "_picture", aria-hidden="true")
			picture.cssbox-box.loading(style="background-image: url("+gallery[i].url+"?q=75)", id="gallery01_" + i + "_picture", role="presentation", aria-labelledby="gallery01_" + i + "_label")
				label.close(for="gallery01_close", role="button") close
				img(src=gallery[i].url+"?fit=max&w=1000&h=200&q=75", alt="")
				- if(i > 0)
					label.nav.prev(for="gallery01_" + (i-1), role="navigation") previous
				label.nav.next(for="gallery01_" + (i+1), role="navigation") next
				p(role="note") The #{gallery[i].i} picture of the gallery
		input.cssbox-select(type="radio", name="gallery01", value=i, id="gallery01_" + i, role="button", aria-controls="gallery01_" + i + "_picture", aria-hidden="true")
		div.cssbox-box(id="gallery01_" + i + "_picture", role="presentation", aria-labelledby="gallery01_" + i + "_label")
			div.cssbox-content
				include html-content.pug
			label.nav.prev(for="gallery01_" + (i-1), role="navigation") previous
			label.nav.next(for="gallery01_" + (i+1), role="navigation") next
			label.close(for="gallery01_close", role="button") close
		- i++
		input.cssbox-select(type="radio", name="gallery01", value=i, id="gallery01_" + i, role="button", aria-controls="gallery01_" + i + "_picture", aria-hidden="true")
		div.cssbox-box.loading(id="gallery01_" + i + "_picture", role="presentation", aria-labelledby="gallery01_" + i + "_label")
			iframe.cssbox-content(src="iframe-content.html")
			label.nav.prev(for="gallery01_" + (i-1), role="navigation") previous
			label.close(for="gallery01_close", role="button") close
		input.cssbox-select.close(type="radio", name="gallery01", value="close", id="gallery01_close", role="button", aria-hidden="true")
		label.cssbox-overlay(for="gallery01_close", role="presentation")